/* pages/position/position.wxss */
.pos-box {
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-image: url(http://imgcdnjwd.juewei.com/seckill/G_1488556771.4158_171024.png);
    background-position: center 0, center bottom;
    background-color: #d30e0e;
    background-repeat: no-repeat, no-repeat;
    background-size: 100%;
    z-index: 3000;
}

.pos-icon {
    position: absolute;
    left: 0;
    top: 16%;
    right: 0;
    margin: 0 auto;
    width: 8.93333rem;
    text-align: center;
    padding-top: 5.46667rem;
    font-size: 0.53333rem;
    color: #fff;
    background: url(http://imgcdnjwd.juewei.com/h5/1476870803.png) no-repeat center top;
    background-size: 100%;
}

.pos-info {
    position: absolute;
    top: 74%;
    left:0;
    right:0;
    margin:0 auto;
    text-align:left;
    width:2.5rem;
    color:#fff;
    padding-top:1.06667rem;
    background: url(data:image/png;base64,) no-repeat center top;
    background-size: 46%;
    -webkit-animation: ani-icon 0.5s linear 0s infinite;
    animation: ani-icon 0.5s linear 0s infinite;
    -webkit-animation-direction: alternate;
    animation-direction: alternate;
}

.pos-info div {
    position: relative;
    text-indent: 1.6em;
    font-size: 0.65rem;
}

.mydata-top {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

@-webkit-keyframes ani-icon {
    0% {
        -webkit-opacity: 1;
    }
    100% {
        -webkit-opacity: 0.7;
    }
}

@keyframes ani-icon {
    0% {
        opacity: 1;
    }
    100% {
        opacity: 0.7;
    }
}